{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/logfile.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "PowrIntegrationDatabase": "Data Source=/usr/local/powrintegration/powertill.db"
  },
  "Services": {
    "ServiceTimeoutSeconds": 10,
    "Powertill": {
      "QueueName": "Powertill",
      "QueueHost": "rabbitmq",
      "ImportDirectory": "/usr/local/powrintegration"
    },
    "Api": {
      "QueueName": "ZraApi",
      "QueueHost": "rabbitmq",
      "ApiBaseUrl": "http://host.docker.internal:8080/sandboxvsdc/",
      "TaxpayerIdentificationNumber": "1002209019",
      "TaxpayerBranchIdentifier": "000",
      "DeviceSerialNumber": "Version 8",
      "ShouldInitializeDevice": false,
      "RegisterDeviceFilename": "/usr/local/powrintegration/device.json",
      // A Standard Rated
      // B Minimum Taxable Value MTV
      // C1 Exports
      // C2 Zero Rated Granted Exemption
      // C3 Zero Rated by Nature
      // D VAT Exempt
      // E Disbursement
      // RVAT Reverse VAT
      // IPL1 Insurance Premium Levy
      // IPL2 Re-Insurance
      // TL Tourism Levy
      // F Service Charge
      // ECM Excise on Coal
      // EXEEG Excise on Electricity
      // TOT Turnover Tax
      "TaxTypeMappings": [
        {
          "SalesGroupId": 44,
          "TaxTypeCode": "D"
        },
        {
          "SalesGroupId": 62,
          "TaxTypeCode": "D"
        }
      ]
    }
  }
}